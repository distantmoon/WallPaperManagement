@model WallPaperManagement.Models.OrderInfo

@{
    ViewBag.Title = "修改订单";
}

<h2>修改订单</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>订单信息</legend>

        @Html.HiddenFor(model => model.OrderInfoId)

       

        <div class="editor-label">
            @Html.LabelFor(model => model.PriceDecimal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PriceDecimal)
            @Html.ValidationMessageFor(model => model.PriceDecimal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OrderCount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderCount)
            @Html.ValidationMessageFor(model => model.OrderCount)
        </div>

        <p>
            <input type="submit" value="确定" class="btn btn-primary"/>  @Html.ActionLink("返回订单列表", "Index","Order",null,new {@class="btn"})

        </p>
    </fieldset>
}


  
