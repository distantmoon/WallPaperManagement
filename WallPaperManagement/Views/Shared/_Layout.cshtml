<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        @*    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />*@
           
        <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Custom.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/base/jquery.ui.dialog.css")" rel="stylesheet" type="text/css" />
        @*        <link href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />*@
        <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
         <link href="@Url.Content("~/Content/easyui.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/knockout-3.2.0.js")" type="text/javascript"> </script>
        <script>
            $(document).ready(function() {
                var currentController = window.location.pathname.split('/')[1];
                $.each($(".nav").find("a"), function(index, item) {
                    if ($(item).attr("href").split('/')[1] == currentController) {
                        $(item).parent().addClass("active");
                    }
                });
            });
        </script>
        @RenderSection("Scripts", false)
    </head>
    <body>
        <div class="row-fluid">
            <div class="span10 offset1">
                <div class="navbar">
                    <div class="navbar-inner">
                        <a class="brand" href="#">库存管理系统</a>
                        <ul class="nav">
                            <li>@Html.ActionLink("当前库存", "Index", "WallPaper")</li>
                            
                            @if (this.Request.IsAuthenticated && this.User.Identity.Name == "admin")
                            {
                                <li>@Html.ActionLink("用户管理", "Index", "User")</li>
                            }
                            <li>@Html.ActionLink("客户管理", "Index", "Client")</li>
                            <li>@Html.ActionLink("订单管理", "Index", "Order")</li>
                        </ul>
                    </div>
                </div>
                <div id="logindisplay "  class="text-right">
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
        </div>
        <div class="row-fluid">
           
            <div class="span10 offset1">
                @RenderBody()
            </div>
        </div>
    </body>
</html>