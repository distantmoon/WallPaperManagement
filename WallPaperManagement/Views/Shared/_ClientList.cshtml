@using WallPaperManagement.Models
@model List<WallPaperManagement.Models.ClientInfo>
           
<table  class="table table-striped table-hover ">
    <tr>
        <th>
            编号
        </th> 
        <th>
            客户姓名
        </th>
        <th>
            客户电话
        </th>
        <th>
            客户手机
        </th>
        <th>
            客户地址
        </th>
        <th>
            操作
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @string.Format("{0:D8}",item.ClientInfoId)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <input type="hidden" value="@item.ClientInfoId"/>
            <input type="button" value="选择"　class="btn"　 onclick="setClient(this);"/>
        </td>
        
    </tr>
}

</table>
